{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TableGen",
  "scopeName": "source.tablegen",
  "fileTypes": ["td"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#preprocessor" },
    { "include": "#strings" },
    { "include": "#integer" },
    { "include": "#builtin_types" },
    { "include": "#keywords" },
    { "include": "#classes" },
    { "include": "#defs" },
    { "include": "#values" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment.line.double-slash.tablegen"
        },
        {
          "begin": "/\\*",
          "end": "\\*/",
          "name": "comment.block.tablegen",
          "patterns": [
            { "include": "#comments" }
          ]
        }
      ]
    },
    "preprocessor": {
      "patterns": [
        {
          "match": "^\\s*#ifdef\\s+(\\w+)",
          "name": "keyword.control.ifdef.tablegen",
          "captures": {
            "1": { "name": "entity.name.function.preprocessor.tablegen" }
          }
        },
        {
          "match": "^\\s*#ifndef\\s+(\\w+)",
          "name": "keyword.control.ifndef.tablegen",
          "captures": {
            "1": { "name": "entity.name.function.preprocessor.tablegen" }
          }
        },
        {
          "match": "^\\s*#else",
          "name": "keyword.control.else.tablegen"
        },
        {
          "match": "#endif",
          "name": "keyword.control.endif.tablegen"
        },
        {
          "match": "#define\\s+(\\w+)",
          "name": "keyword.control.define.tablegen",
          "captures": {
            "1": { "name": "entity.name.function.preprocessor.tablegen" }
          }
        },
        {
          "match": "^\\s*include\\s+",
          "name": "keyword.control.include.tablegen"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tablegen",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.tablegen" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.tablegen" }
          },
          "patterns": [
            {
              "match": "\\\\['nt\"\\\\]",
              "name": "constant.character.escape.tablegen"
            }
          ]
        },
        {
          "name": "string.quoted.code.tablegen",
          "begin": "\\[\\{",
          "end": "\\}\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.tablegen" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.tablegen" }
          }
        }
      ]
    },
    "integer": {
      "patterns": [
        {
          "match": "\\b0[xX][a-fA-F0-9]+\\b",
          "name": "constant.numeric.hex.tablegen"
        },
        {
          "match": "\\b0b[01]+\\b",
          "name": "constant.numeric.binary.tablegen"
        },
        {
          "match": "\\b-?\\d+\\b",
          "name": "constant.numeric.tablegen"
        }
      ]
    },
    "builtin_types": {
      "patterns": [
        {
          "match": "\\b(?:bit|code|dag|int|string)\\b",
          "name": "entity.name.type.tablegen"
        },
        {
          "begin": "\\b(bits)\\s*<",
          "beginCaptures": {
            "1": { "name": "entity.name.type.tablegen" }
          },
          "patterns": [
            { "include": "#integer" }
          ],
          "end": ">"
        },
        {
          "begin": "\\b(list)\\s*<",
          "beginCaptures": {
            "1": { "name": "entity.name.type.tablegen" }
          },
          "patterns": [
            { "include": "#types" }
          ],
          "end": ">"
        }
      ]
    },
    "types": {
      "patterns": [
        { "include": "#builtin_types" },
        {
          "match": "\\b(\\w+)\\b",
          "name": "entity.name.type.tablegen"
        }
      ]
    },
    "bang_operators": {
      "patterns": [
        {
          "begin": "(\\!cast|\\!getdagop|\\!isa)\\s*<",
          "beginCaptures": {
            "1": { "name": "entity.name.function.tablegen" }
          },
          "patterns": [
            { "include": "#types" }
          ],
          "end": ">"
        },
        {
          "match": "(\\!\\w+)\\b",
          "name": "entity.name.function.tablegen"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(assert|else|foreach|defset|defvar|field|if|in|let|then)\\b",
          "name": "keyword.other.tablegen"
        }
      ]
    },
    "record_body": {
      "patterns": [
        {
          "comment": "Parent class list after colon",
          "begin": ":",
          "patterns": [
            {
              "match": "\\b(\\w+)\\b",
              "name": "entity.name.type.tablegen"
            },
            {
              "begin": "<",
              "patterns": [
                { "include": "#values" }
              ],
              "end": ">"
            }
          ],
          "end": "(?=;|\\{)"
        },
        {
          "comment": "Record body in braces",
          "begin": "\\{",
          "patterns": [
            { "include": "#keywords" },
            { "include": "#builtin_types" },
            {
              "comment": "Field definition: Type Name = or just Name =",
              "match": "\\b(\\w+\\s+)?\\b(\\w+)\\b\\s*=",
              "captures": {
                "1": { "name": "entity.name.type.tablegen" },
                "2": { "name": "variable.other.tablegen" }
              }
            },
            { "include": "#values" }
          ],
          "end": "(?=\\})"
        }
      ]
    },
    "classes": {
      "begin": "\\b(multiclass|class)\\b\\s+(\\w+)\\b",
      "beginCaptures": {
        "1": { "name": "keyword.other.class.tablegen" },
        "2": { "name": "entity.name.type.tablegen" }
      },
      "patterns": [
        {
          "comment": "Template arguments",
          "begin": "<",
          "patterns": [
            { "include": "#builtin_types" },
            {
              "comment": "Type and parameter name",
              "match": "\\b(\\w+\\s+)?\\b(\\w+)\\b",
              "captures": {
                "1": { "name": "entity.name.type.tablegen" },
                "2": { "name": "variable.parameter.tablegen" }
              }
            },
            {
              "comment": "Default value",
              "begin": "=",
              "patterns": [
                { "include": "#values" }
              ],
              "end": "(?=>|,)"
            }
          ],
          "end": ">"
        },
        { "include": "#record_body" }
      ],
      "end": "(;|\\})"
    },
    "defs": {
      "begin": "\\b(defm|def)\\b",
      "beginCaptures": {
        "1": { "name": "keyword.other.def.tablegen" }
      },
      "patterns": [
        { "include": "#record_body" },
        { "include": "#values" }
      ],
      "end": "(;|\\})"
    },
    "values": {
      "patterns": [
        { "include": "#builtin_types" },
        { "include": "#bang_operators" },
        { "include": "#classes" },
        { "include": "#defs" },
        { "include": "#comments" },
        { "include": "#integer" },
        { "include": "#strings" },
        {
          "match": "\\b(?:false|true)\\b",
          "name": "constant.language.boolean.tablegen"
        },
        {
          "match": "\\?",
          "name": "constant.language.unknown.tablegen"
        },
        {
          "comment": "Bit init like { 1, 0, 1 }",
          "begin": "\\{",
          "patterns": [
            { "include": "#values" }
          ],
          "end": "\\}"
        },
        {
          "comment": "List init like [ a, b, c ]",
          "begin": "\\[",
          "patterns": [
            { "include": "#values" }
          ],
          "end": "(?=\\])"
        },
        {
          "comment": "List type suffix ]<type>",
          "begin": "\\]\\s*<",
          "patterns": [
            { "include": "#types" }
          ],
          "end": ">"
        },
        {
          "comment": "DAG init like (operator args)",
          "begin": "\\(",
          "patterns": [
            { "include": "#values" }
          ],
          "end": "\\)"
        },
        { "include": "#keywords" },
        {
          "comment": "Class instantiation like ClassName<args>",
          "begin": "\\b(\\w+)<",
          "beginCaptures": {
            "1": { "name": "entity.name.type.tablegen" }
          },
          "patterns": [
            { "include": "#values" }
          ],
          "end": ">"
        },
        {
          "comment": "Dollar variable like $name",
          "match": "(\\$\\w+)\\b",
          "name": "variable.parameter.tablegen"
        },
        {
          "comment": "Paste operator",
          "match": "#",
          "name": "keyword.operator.paste.tablegen"
        },
        {
          "comment": "Identifiers",
          "match": "\\b(\\w+)\\b",
          "name": "variable.other.tablegen"
        },
        { "include": "#preprocessor" }
      ]
    }
  }
}
